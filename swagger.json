{
  "openapi": "3.0.3",
  "info": {
    "title": "cardcourt API",
    "description": "Карточки!",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:4400"
    }
  ],
  "tags": [
    {
      "name": "cards",
      "description": "Все про Ваши (и не только) карточки"
    },
    {
      "name": "users",
      "description": "Все о пользователях"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "security ": [],
        "tags": ["users"],
        "summary": "Регистрация пользователя на сервере",
        "requestBody": {
          "description": "Данные нового пользователя",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/registerUser"
              },
              "example": {
                "name": "Cool_Bob",
                "password": "secret_password"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Возвращает токен пользователя",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/registerUserResponse"
                }
              }
            }
          },
          "default": {
            "description": "Ошибка",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/messageResponse"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "security ": [],
        "tags": ["users"],
        "summary": "Войти в свой аккаунт",
        "requestBody": {
          "description": "Ваши логин и пароль",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/loginUser"
              },
              "example": {
                "name": "Cool_Bob",
                "password": "secret_password"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Возвращает токен пользователя",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/loginUserResponse"
                }
              }
            }
          },
          "default": {
            "description": "Ошибка",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/messageResponse"
                }
              }
            }
          }
        }
      }
    },
    "/me": {
      "get": {
        "tags": ["users"],
        "summary": "Получить данные о себе с помощью токена",
        "responses": {
          "200": {
            "description": "Ваши данные",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/me"
                },
                "example": {
                  "name": "Cool_Bob"
                }
              }
            }
          }
        },
        "security": [
          {
            "auth": []
          }
        ]
      }
    },
    "/cards": {
      "get": {
        "tags": ["cards"],
        "summary": "Начиная со страницы page включительно, загрузить pagesToLoad страниц, имеющих размер pageSize и удовлетворяющих поисковому запросу search и автору by",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Номер страницы, размером pageSize (по умолчанию - 1)",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "pagesToLoad",
            "in": "query",
            "description": "Количество страниц, которое нужно загрузить, начиная с page включительно",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "Размер одной страницы (по умолчанию - 5)",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Поисковый запрос",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "by",
            "in": "query",
            "description": "Имя автора карточек",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Список карточек",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/cardsResponse"
                },
                "example": {
                  "cards": [
                    {
                      "_id": "0238hghuuu8f9d",
                      "name": "My Frist Card",
                      "author": {
                        "name": "Cool_Bob",
                        "_id": "324dfffd4z"
                      },
                      "words": [
                        {
                          "en": "sun",
                          "ru": "солнце",
                          "_id": "hh5432"
                        },
                        {
                          "en": "moon",
                          "ru": "луна",
                          "_id": "hh5433"
                        },
                        {
                          "en": "earth",
                          "ru": "земля",
                          "_id": "hh5434"
                        }
                      ],
                      "ui": {
                        "bodyColor": "#fff",
                        "wordsColor": "#ff0000"
                      }
                    }
                  ],
                  "pageCount": 5
                }
              }
            }
          },
          "default": {
            "description": "Ошибка",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/messageResponse"
                }
              }
            }
          }
        }
      }
    },
    "/cardCount": {
      "get": {
        "tags": ["cards"],
        "summary": "Получить количество страниц карточек, существующих по этому запросу",
        "parameters": [
          {
            "name": "pageSize",
            "in": "query",
            "description": "Размер одной страницы (по умолчанию - 5)",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Поисковый запрос",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "by",
            "in": "query",
            "description": "Имя автора карточек",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Количество страниц",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/cardCountResponse"
                }
              }
            }
          }
        }
      }
    },
    "/card": {
      "post": {
        "tags": ["cards"],
        "summary": "Создать карточку от своего имени",
        "requestBody": {
          "description": "Свойства создаваемой карточки",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/sendedCard"
              },
              "example": {
                "name": "My Frist Card",
                "words": [
                  {
                    "en": "sun",
                    "ru": "солнце"
                  },
                  {
                    "en": "moon",
                    "ru": "луна"
                  },
                  {
                    "en": "earth",
                    "ru": "земля"
                  }
                ],
                "ui": {
                  "bodyColor": "#fff",
                  "wordsColor": "#ff0000"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Id новосозданной карточки",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/createCardResponse"
                },
                "example": {
                  "_id": "0238hghuuu8f9d"
                }
              }
            }
          },
          "default": {
            "description": "Ошибка",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/messageResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "auth": []
          }
        ]
      },
      "delete": {
        "tags": ["cards"],
        "summary": "Удалить карточку по id",
        "requestBody": {
          "description": "id удаляемой карточки",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/deletedCard"
              },
              "example": {
                "_id": "0238hghuuu8f9d"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Сообщение об удалении карточки",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/messageResponse"
                },
                "example": {
                  "message": "Карточка удалена!"
                }
              }
            }
          },
          "default": {
            "description": "Ошибка",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/messageResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "auth": []
          }
        ]
      },
      "put": {
        "tags": ["cards"],
        "summary": "Обновить уже существующую карточку",
        "requestBody": {
          "description": "Обновляемая карточка",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/updatedCard"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Обновленная карточка",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/updateCardResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "auth": []
          }
        ]
      }
    },
    "/card/{cardId}": {
      "get": {
        "tags": ["cards"],
        "summary": "Получить информацию о карточке по id",
        "parameters": [
          {
            "name": "cardId",
            "in": "path",
            "description": "Id карточки",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Информация о карточке",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/card"
                },
                "example": {
                  "_id": "0238hghuuu8f9d",
                  "name": "My Frist Card",
                  "author": {
                    "name": "Cool_Bob",
                    "_id": "324dfffd4z"
                  },
                  "words": [
                    {
                      "en": "sun",
                      "ru": "солнце",
                      "_id": "hh5432"
                    },
                    {
                      "en": "moon",
                      "ru": "луна",
                      "_id": "hh5433"
                    },
                    {
                      "en": "earth",
                      "ru": "земля",
                      "_id": "hh5434"
                    }
                  ],
                  "ui": {
                    "bodyColor": "#fff",
                    "wordsColor": "#ff0000"
                  }
                }
              }
            }
          },
          "default": {
            "description": "Ошибка",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/messageResponse"
                }
              }
            }
          }
        }
      }
    },
    "/userInfo/{userName}": {
      "get": {
        "tags": ["users"],
        "summary": "Получить публичную информацию о пользователе",
        "parameters": [
          {
            "name": "userName",
            "in": "path",
            "description": "Имя пользователя",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Информация о пользователе",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/publicUserInfo"
                },
                "example": {
                  "name": "Cool_Bob"
                }
              }
            }
          },
          "default": {
            "description": "Ошибка",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/messageResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "messageResponse": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "id": {
        "type": "object",
        "required": ["_id"],
        "properties": {
          "_id": {
            "type": "string"
          }
        }
      },
      "token": {
        "type": "object",
        "required": ["token"],
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "registerUser": {
        "type": "object",
        "required": ["name", "password"],
        "properties": {
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "registerUserResponse": {
        "$ref": "#/components/schemas/token"
      },
      "loginUser": {
        "type": "object",
        "required": ["name", "password"],
        "properties": {
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "loginUserResponse": {
        "$ref": "#/components/schemas/token"
      },
      "fullUser": {
        "allOf": [
          {
            "$ref": "#/components/schemas/registerUser"
          },
          {
            "$ref": "#/components/schemas/publicUser"
          }
        ]
      },
      "publicUserInfo": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "publicUserFeatures": {
        "type": "object",
        "required": ["publicCards"],
        "properties": {
          "publicCards": {
            "$ref": "#/components/schemas/cards"
          }
        }
      },
      "publicUser": {
        "type": "object",
        "required": ["publicUserInfo", "publicUserFeatures"],
        "properties": {
          "publicUserInfo": {
            "$ref": "#/components/schemas/publicUserInfo"
          },
          "publicUserFeatures": {
            "$ref": "#/components/schemas/publicUserFeatures"
          }
        }
      },
      "me": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "createCardResponse": {
        "$ref": "#/components/schemas/id"
      },
      "cardUI": {
        "type": "object",
        "required": ["bodyColor", "wordsColor"],
        "properties": {
          "bodyColor": {
            "type": "string"
          },
          "wordsColor": {
            "type": "string"
          }
        }
      },
      "cardAuthor": {
        "type": "object",
        "required": ["name", "_id"],
        "properties": {
          "name": {
            "type": "string"
          },
          "_id": {
            "type": "string"
          }
        }
      },
      "cardAuthorField": {
        "type": "object",
        "required": ["author"],
        "properties": {
          "author": {
            "$ref": "#/components/schemas/cardAuthor"
          }
        }
      },
      "editedCardFields": {
        "type": "object",
        "required": ["ui", "words", "name"],
        "properties": {
          "ui": {
            "$ref": "#/components/schemas/cardUI"
          },
          "words": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "$ref": "#/components/schemas/cardWord"
                },
                {
                  "$ref": "#/components/schemas/sendedCardWord"
                }
              ]
            }
          },
          "name": {
            "type": "string"
          }
        }
      },
      "sendedCardWord": {
        "type": "object",
        "required": ["en", "ru"],
        "properties": {
          "en": {
            "type": "string"
          },
          "ru": {
            "type": "string"
          }
        }
      },
      "cardWord": {
        "allOf": [
          {
            "$ref": "#/components/schemas/sendedCardWord"
          },
          {
            "$ref": "#/components/schemas/id"
          }
        ]
      },
      "sendedCardWords": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/sendedCardWord"
        }
      },
      "cardWords": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/cardWord"
        }
      },
      "sendedCard": {
        "type": "object",
        "required": ["name", "words", "ui"],
        "properties": {
          "name": {
            "type": "string"
          },
          "words": {
            "$ref": "#/components/schemas/sendedCardWords"
          },
          "ui": {
            "$ref": "#/components/schemas/cardUI"
          }
        }
      },
      "card": {
        "allOf": [
          {
            "type": "object",
            "required": ["author", "words"],
            "properties": {
              "author": {
                "$ref": "#/components/schemas/cardAuthor"
              },
              "words": {
                "$ref": "#/components/schemas/cardWords"
              }
            }
          },
          {
            "$ref": "#/components/schemas/sendedCard"
          },
          {
            "$ref": "#/components/schemas/id"
          }
        ]
      },
      "deletedCard": {
        "$ref": "#/components/schemas/id"
      },
      "updatedCard": {
        "allOf": [
          {
            "$ref": "#/components/schemas/id"
          },
          {
            "$ref": "#/components/schemas/editedCardFields"
          },
          {
            "$ref": "#/components/schemas/cardAuthorField"
          }
        ]
      },
      "updateCardResponse": {
        "type": "object",
        "required": ["updatedCard"],
        "properties": {
          "updatedCard": {
            "$ref": "#/components/schemas/card"
          }
        }
      },
      "cards": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/card"
        }
      },
      "cardCountResponse": {
        "type": "object",
        "required": ["pageCount", "cardCount"],
        "properties": {
          "pageCount": {
            "type": "integer"
          },
          "cardCount": {
            "type": "integer"
          }
        }
      },
      "cardsResponse": {
        "type": "object",
        "required": ["pageCount", "cards", "maxLoadedPage"],
        "properties": {
          "cards": {
            "$ref": "#/components/schemas/cards"
          },
          "maxLoadedPage": {
            "type": "integer"
          },
          "pageCount": {
            "type": "integer"
          }
        }
      }
    },
    "securitySchemes": {
      "auth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
